{
	"name": "tailwind-quick",
	"scripts": {
		"build:bundler": "esbuild src/tsc/main.ts --bundle --outfile=dist/main.js --minify --define:process.env.IP='\"'$IP'\"'",
		"build:css": "npx tailwindcss -i src/css/input.css -o ./dist/style.css",
		"build:assets": "mkdir -p dist && cp ./src/index.html ./dist/ && cp -r ./public/* ./dist/ && mkdir -p dist/views && cp -r ./src/views/* ./dist/views/",
		"build": "rm -rf dist && npm run build:bundler && npm run build:css && npm run build:assets"
	},
	"devDependencies": {
		"@types/chart.js": "^4.0.1",
		"@types/earcut": "^3.0.0",
		"@types/node": "^24.0.14",
		"concurrently": "^9.2.0",
		"esbuild": "^0.25.9",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/cli": "^4.1.10",
		"babylonjs": "^8.25.0",
		"chart.js": "^4.5.0",
		"earcut": "^3.0.2"
	},
	"version": "1.0.0",
