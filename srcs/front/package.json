{
  "name": "tailwindcss-setup",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
	"dev": "npx @tailwindcss/cli -i ./src/css/input.css -o ./src/css/style.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/css/input.css -o ./src/css/style.css",
	"build:ts": "npx tsc",
	"build:html": "cp ./src/index.html ./dist/index.html",
	"build": "npm run build:css && npm run build:ts && npm run build:html"
  },
