  "devDependencies": {
    "browser-sync": "^3.0.4",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.10",
	"typescript": "^5.0.0"
  }
}
